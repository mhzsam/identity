@model WebApplication.ViewModels.AcccountViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h1>ResetPassword</h1>

<div>
    <form asp-controller="Account" asp-action="ResetPassword" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p>رمز عبور تغییر کرد </p>
            </div>
            <script>
                var delay = 2000;
                setTimeout(function () { window.location = "/Home"; }, delay);
            </script>

        }

        <label asp-for="Password" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <br/>
        <div>
            <input type="hidden" asp-for="Email" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control" />

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">تغییر رمز</button>
        </div>



    </form>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}